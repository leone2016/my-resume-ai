{
    "manifest_version": 3,
    "name": "My Resume AI",
    "version": "1.0.0",
    "description": "Optimize your CV with Gemini based on Job Descriptions",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "my-resume-ai.png",
            "32": "my-resume-ai.png"
        }    },
     "icons": {
         "16": "my-resume-ai.png",
         "48": "my-resume-ai.png",
         "128": "my-resume-ai.png"
     }
}